<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/totaal"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/jaarbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/my_button_bg"
                android:text="Jaar" />
            <Button
                android:id="@+id/plaatsbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/my_button_bg"
                android:text="Plaats" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/datumnaam"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Datum"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tijdnaam"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Tijd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dagbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="Datum" />
            <Button
                android:id="@+id/maandbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="Datum" />
            <Button
                android:id="@+id/uurbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="Tijd" />
            <Button
                android:id="@+id/minuutbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="Tijd" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tideprevname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="VLOED"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tidenowname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="EBBIG"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tidenextname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="EB"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tideprevtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="tijd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tidenowtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="tijd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tidenexttime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="tijd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tideprevhight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="hoogte"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tidenowhight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="hoogte"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tidenexthight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="hoogte"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>